FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    location    "0.06";
    object      vSmoothField;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{
    inlet
    {
        type            zeroGradient;
    }
    outlet
    {
        type            zeroGradient;
    }
    walls
    {
        type            zeroGradient;
    }
    procBoundary0to1
    {
        type            processor;
        value           uniform (0 0 0);
    }
}


